{% extends 'base.html.twig' %}

{% block title %} {{offer.name}} {% endblock %}

{% block body %} 

    <div class='menuPublic'>
        {{ include('include/menu.html.twig') }}
    </div>
    
    <div class='container-fluid'>
        <div class='row'>
            <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>

                <div class='offer-page'>

                    <h3 class='hOffreS'>{{offer.name}}</h3>

                    <p>Publi√© le {{ offer.publishedAt|format_datetime(pattern='hh MMMM y', locale='fr') }} - Du {{ offer.permanentValidityBeginning|date("d/m/Y") }} du {{ offer.permanentValidityEnding|date("d/m/Y") }}</p>
                    
                    <div class='offer-body'>

                        <p>{{ offer.description }}<p>

                        <div class='offer-imgs'>
                            {% for offer in offer.images %}
                                <img src={{ offer.path }}/>
                            {% endfor %}
                        </div>
                        
                    </div>
                </div>

                <div class='btnPArtner'>
                    <a class='admin-update' href={{ path('offers') }}>Retour</a>
                </div><br>

            </div>
        </div>
    </div>

{% endblock %}
