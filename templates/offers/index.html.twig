{% extends 'base.html.twig' %}

{% block title %}Offres{% endblock %}  

{% block body %}
    <div class='menuPublic'>
        {{ include('include/menu.html.twig') }}
    </div>

    <h3 class='hMessage'>Offres :</h3> 
    <div class='partners-container'>
        {% for offer in pagination.data %}
            <div class='offer-card'>
                <label for='image-{{ offer.id }}'><img src={{ offer.images[0].path }} /></label>
                <div class='offer-right'>
                    <div class='offer-info'>
                        <h4>{{ offer.name }}</h4>
                        <div class="offer-description">
                            <p>{{ offer.description }}</p>
                        </div>
                        <a class='offer-about' href={{ path('offer_details', {'id' : offer.id}) }}>En savoir plus &gt;</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {{ include('components/_paginationIndex.html.twig') }}
    <div class='btnPArtner'>
        <a class='offer-button' href={{ path('home') }}>Retour Ã  l'accueil</a>
    </div>
{% endblock %}
