{% extends 'back_office/base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

    <div class='container-fluid'>
        <div class='row'>
            <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>
                <h3 class='hMessage'>Utilisateurs :</h3>
                <div class='admin-user-footer'>
                    <a class='admin-create' href="{{ path('user_new') }}">Nouvel utilisateur</a>
                </div>
                <div class='admin-user'>
                    {% if users|length > 0 %}
                    <div class='table-responsive'>
                        <table class="table admin-table table table-striped table-bordered">
                            <thead class='thead-dark'>
                                <tr>
                                    <th scope="col">Email</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <th scope="row">{{ user.email }}</th>
                                    <td>
                                        <div class='btnAdmin'>
                                            <a class='admin-update' href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                                            <div class='btnAdminSpace'>
                                            {{ include('back_office/user/_delete_form.html.twig') }}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">Pas d'utilisateur trouv√©</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                        Pas d'utilisateur
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
