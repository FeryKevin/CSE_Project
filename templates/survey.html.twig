<div class='survey-container'>
    <div class='survey-header'><h5>Votre avis compte</h5></div>
    {{ form_start(form) }}
    <div class='survey-body'>
        <h6>{{ survey.question }}</h6>
        <div class='survey-choices'>
            {{ form_widget(form.answers) }}
        </div>
        <input type='hidden' name='survey' value={{ survey.id }} /> 
        {% for message in app.flashes('success') %}
            <div class="alert-success">
                {{ message }}
            </div>
        {% endfor %}
        </div>
        <div class='survey-footer'><a>Voir les r√©ponses</a> {{ form_widget(form.save, { 'label': 'Valider' }) }}</div>
    {{ form_end(form) }}
</div>