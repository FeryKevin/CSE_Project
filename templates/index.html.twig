{% extends "base.html.twig" %}

{% block title %} Homepage {% endblock %}

{% block body %}
    {% include "include/navbar.html.twig" %}

    <h1>Dernières offres ponctuelles</h2>

    {% for offer in pagination.data %}
        <div class="offer-container">
            <div class='offer-top'>
                <div class='offer-icon'>Offre ponctuelle</div>
                <h6 class='offer-time'>Publié le {{ offer.publishedAt|format_datetime(pattern='hh MMMM y', locale='fr') }} - Du {{ offer.permanentValidityBeginning|date("d/m/Y") }} du {{ offer.permanentValidityEnding|date("d/m/Y") }} </h6>
            </div>
            <p class='offer-description'>{{ offer.description }}</p>
            <a class='offer-about' href={{ path('offer_details', {'id' : offer.id}) }}>En savoir plus &gt;</a>
        </div>
    {% endfor %}

    {{ include('component/_pagination.html.twig') }}
{% endblock %}