{% extends 'back_office/base.html.twig' %}

{% block title %}Partenaires{% endblock %}  

{% block body %}

    <h3 class='hMessage'>Partenaires :</h3>
    
    <div class='partners-container'>

        {% for partners in partners %}

            <div class='partner-card'>

                <label for='image-input-{{ partners.id }}'> <img src={{ partners.image.path }} /> </label>

                <form class='form-partner-image' enctype="multipart/form-data">
                    <input type='file' name='image-input' id='image-input-{{ partners.id }}' class='inputs-partners' data={{ partners.id }} />
                </form>

                <div class='partner-right'>

                    <div class='partner-info'>
                        <input type='text' name='name' class='partner-{{ partners.id }}' value="{{ partners.name }}" />
                        <input type='text' name='description' class='partner-{{ partners.id }}' value="{{ partners.description }}" /> 
                        <input type='text' name='websiteLink' class='partner-{{ partners.id }}' value="{{ partners.websiteLink }}" /> 
                    </div>

                    <div class='partner-actions'>
                        <a class='partner-update' data={{ partners.id }}>Modifier</a>
                        <a class='partner-delete' data={{ partners.id }}>Supprimer</a>
                    </div>

                </div>
            </div>

        {% endfor %}
    </div>

    <a href={{ path('partner_create') }}>
        <div class='partner-card'>
            <h3>Ajouter un partenaire</h3>
        </div>
    </a>

    <script src='/scripts/partner.js'></script>

{% endblock %}
