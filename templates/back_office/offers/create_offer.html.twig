{% extends 'back_office/base.html.twig' %}

{% block title %}Offres | Admin{% endblock %}

{% block body %}    
    <section id="form-section" imagesNumber=0>
        <h2 class="form-title">Nouvelle offre {{ type }}</h2>
        <div id="permanent_offers_form">
            {{ form_start(form) }}
            <div class="form" type={{ type }}>
                <div class="form-separate">
                    <div class="form-left">
                        {{ form_row(form.name) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.images) }}
                    </div>
                    <div class="form-right">
                        {% if type == "permanente" %}
                            {{ form_row(form.permanentValidityBeginning) }}
                            {{ form_row(form.permanentValidityEnding) }}
                            {{ form_row(form.permanentMinimumPlaces) }}
                        {% else %}
                            {{ form_row(form.limitedDisplayBeginning) }}
                            {{ form_row(form.limitedDisplayEnding) }}
                            {{ form_row(form.limitedDisplayNumber) }}
                        {% endif %}
                    </div>
                </div>
                <div class='offer-form-buttons'>
                    {{ form_row(form.submit) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
    <div class="offer-buttons">
        <a class="offer-button" href="{{ path('admin_offers') }}">Retour au menu des offres</a>
    </div>
    <script src="/scripts/add_offer_image.js"></script>
    <script>
        addFormToCollection();
    </script>
{% endblock %}