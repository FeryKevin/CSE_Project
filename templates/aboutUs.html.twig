{% extends 'base.html.twig' %}

{% block title %}À propos de nous{% endblock %}

{% block body %} 

    <div class='menuPublic'>
        {{ include('include/menu.html.twig') }}
    </div>

    <div class='container-fluid'>
        <div class='row'>
            <div class='col-lg-12 col-md-12 col-sm-12 col-xs-12'>

                <div>

                    {% if text|length > 0 %}
                        <h3 class='hAbout2'>A propos de nous</h3><br>
                        <p class='aboutTxt'>{{ text | raw }}</p>
                    {% endif %}

                    {% if email|length > 0 %}
                        <div class='aboutus-actions'>
                            <h3 class='hAbout2'>Notre email</h3><br>
                            <p class='aboutTxt'>{{ email | raw }}</p><br>
                        </div>
                    {% endif %}

                    {% if rules|length > 0 %}
                        <div class='aboutus-rules'>
                            <h3 class='hAbout2'>Règlement</h3><br>
                            <p class='aboutTxt'>{{ rules | raw }}</p>
                        </div>
                    {% endif %}

                    {% if actions|length > 0 %}
                        <div class='aboutus-actions'>
                            <h3 class='hAbout2'>Nos actions</h3><br>
                            <p class='aboutTxt'>{{ actions | raw }}</p><br>
                        </div>
                    {% endif %}
                    
                    <h3 class='hAbout2'>Nos membres</h3>
                    <div class='aboutUs-photos'>
                        {% if members|length > 0 %}
                            {% for member in members %}
                                <div class='about-presentation'>
                                    <img src={{ member.image.path }} />
                                    <p>{{ member.name }} {{ member.firstname }}</p>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p>Pas de membre</p>
                        {% endif %}
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

{% endblock %}