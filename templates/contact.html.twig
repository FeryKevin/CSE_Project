{% extends 'base.html.twig' %}

{% block title %}Contactez-nous ! {% endblock %}

{% block body %} 

    <div class='menuPublic'>
        {{ include('include/menu.html.twig') }}
    </div>

    <div class='contact-form'>
        <h2>Vous souhaitez nous contactez ?</h2>
        <div id='contact'>
            {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.firstName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.message) }}

                {# {{ form_widget(form.security) }} #}

                {% for message in app.flashes('contact-success') %}
                    <div class="contact-success">
                        {{ message }}
                    </div>
                {% endfor %}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
