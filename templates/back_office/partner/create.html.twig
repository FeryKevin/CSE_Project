{% extends 'back_office/base.html.twig' %}

{% block title %}Ajouter un partenaire {% endblock %}

{% block body %}

    <div class='addPartner'>

        <h3 class='hMessage'>Ajouter un partenaire :</h3>

        <div class='partner-form'>

            {{ form_start(form) }}

                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}

                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}

                {{ form_label(form.websiteLink) }}
                {{ form_widget(form.websiteLink) }}
                {{ form_errors(form.websiteLink) }}

                {{ form_label(form.image) }}
                {{ form_widget(form.image) }}
                {{ form_errors(form.image) }}

                {{ form_widget(form.submit) }}

            {{ form_end(form) }}

        </div>

        <div class='btnPArtner'>
            <a class='admin-update' href={{ path('partners') }}>Retour</a>
        </div>

    </div>

{% endblock %}
